<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.access.mapper.MenuMapper" >
    <insert id="addAdminMenu" useGeneratedKeys="true" keyProperty="id">
         insert into p_menu (pid, name, url, icon,seq,type,target,status,articleId,createTime)
        VALUES (#{pid},#{name},#{url}, #{icon}, #{seq}, #{type}, #{target}, #{status},#{articleId}, #{createTime})
    </insert>
    <insert id="addRoleMenu">
         insert into p_role_menu (roleId, menuId)
        VALUES (#{roleId},#{menuId})
    </insert>

    <delete id="removeAdminMenu" >
        DELETE FROM p_menu  WHERE id = #{id}
    </delete>
    <delete id="removeRoleMenu">
         DELETE FROM p_role_menu  WHERE menuId = #{id}
    </delete>

    <select id="queryByUrl" resultType="com.perfree.model.Menu">
        select * from p_menu where url = #{url}
    </select>
</mapper>
